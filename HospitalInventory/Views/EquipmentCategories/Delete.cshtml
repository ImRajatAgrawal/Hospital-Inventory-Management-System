@model HospitalInventory.Models.EquipmentCategory

@{
    ViewBag.Title = "Delete";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/LoginPage");
    }
    else if (Session["userRole"].Equals("Staff"))
    {
        Response.Redirect("~/Home/ErrorPage");
    }
}

<style>
    a {
        color: purple;
    }
</style>

<h2>Deleting the Equipment Category</h2>
<h3 style="color: red">WARNING!!! All the equipments associated with this category will also be deleted</h3>
<h4>Are you sure you want to delete this Equipment Category with its equipments?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Equipment Category Name</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EquipmentCategoryName)
        </dd>

        <dt>
            <p>Is the equipment category reusable?</p>
        </dt>

        <dd>
            @if (Model.EquipmentCategoryIsReusable)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }

        </dd>

        <dt>
            <p>Equipment category Threshold value</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EquipmentCategoryThreshold)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
