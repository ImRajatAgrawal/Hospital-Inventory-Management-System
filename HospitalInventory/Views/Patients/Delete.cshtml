@model HospitalInventory.Models.Patient

@{
    ViewBag.Title = "Delete";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/LoginPage");
    }
}

<style>
    a {
        color: purple;
    }
</style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Patient Category</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PatientCategory.PatientCategoryName)
        </dd>

        <dt>
            <p>Hospital Staff Name</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.employeeName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
